<style>
  .site-footer {
    background: var(--bg-alt);
    border-top: 1px solid var(--border);
    margin-top: 0;
  }

  .footer-top {
    padding: 4rem 0;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr 1.5fr;
    gap: 3rem;
  }

  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .footer-logo {
    display: flex;
    align-items: center;
    gap: 0.625rem;
    text-decoration: none;
  }

  .footer-logo-text {
    font-family: 'Syne', sans-serif;
    font-weight: 800;
    font-size: 1.25rem;
    color: var(--text);
    letter-spacing: -0.03em;
    -webkit-text-fill-color: var(--text);
  }

  .footer-tagline {
    font-size: 0.9rem;
    color: var(--text-muted);
    line-height: 1.6;
    max-width: 280px;
  }

  .social-links {
    display: flex;
    gap: 0.75rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: 8px;
    border: 1px solid var(--border);
    color: var(--text-muted);
    background: var(--surface);
    transition: all 150ms ease;
    -webkit-text-fill-color: var(--text-muted);
  }

  .social-link:hover {
    border-color: var(--accent);
    color: var(--accent);
    background: rgba(var(--accent-rgb), 0.08);
    -webkit-text-fill-color: var(--accent);
    opacity: 1;
    transform: translateY(-2px);
  }

  .footer-col-title {
    font-family: 'Syne', sans-serif;
    font-size: 0.875rem;
    font-weight: 700;
    color: var(--text);
    letter-spacing: 0.05em;
    text-transform: uppercase;
    margin-bottom: 1rem;
  }

  .footer-nav {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.625rem;
  }

  .footer-nav a {
    font-size: 0.9rem;
    color: var(--text-muted);
    text-decoration: none;
    -webkit-text-fill-color: var(--text-muted);
    transition: color 150ms ease;
    display: inline-block;
  }

  .footer-nav a:hover {
    color: var(--accent);
    -webkit-text-fill-color: var(--accent);
    opacity: 1;
  }

  .contact-items {
    display: flex;
    flex-direction: column;
    gap: 0.875rem;
  }

  .contact-item {
    display: flex;
    align-items: flex-start;
    gap: 0.625rem;
    font-size: 0.875rem;
    color: var(--text-muted);
    text-decoration: none;
    -webkit-text-fill-color: var(--text-muted);
    transition: color 150ms ease;
  }

  .contact-item svg {
    flex-shrink: 0;
    margin-top: 2px;
    color: var(--accent);
  }

  a.contact-item:hover {
    color: var(--accent);
    -webkit-text-fill-color: var(--accent);
    opacity: 1;
  }

  .footer-bottom {
    border-top: 1px solid var(--border);
    padding: 1.25rem 0;
  }

  .footer-bottom-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .copyright {
    font-size: 0.8125rem;
    color: var(--text-muted);
  }

  .footer-legal {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 0.8125rem;
    color: var(--text-muted);
  }

  .footer-legal a {
    color: var(--text-muted);
    text-decoration: none;
    -webkit-text-fill-color: var(--text-muted);
    transition: color 150ms ease;
  }

  .footer-legal a:hover {
    color: var(--accent);
    -webkit-text-fill-color: var(--accent);
    opacity: 1;
  }

  .made-with {
    font-size: 0.8125rem;
    color: var(--text-muted);
  }

  @media (max-width: 1100px) {
    .footer-grid {
      grid-template-columns: 1fr 1fr 1fr;
      gap: 2.5rem;
    }

    .footer-brand {
      grid-column: 1 / -1;
    }

    .footer-contact {
      grid-column: 1 / -1;
    }
  }

  @media (max-width: 640px) {
    .footer-grid {
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
    }

    .footer-bottom-inner {
      flex-direction: column;
      text-align: center;
    }
  }

  @media (max-width: 480px) {
    .footer-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<script is:inline>
  document.getElementById('footer-year').textContent = new Date().getFullYear();
</script>
