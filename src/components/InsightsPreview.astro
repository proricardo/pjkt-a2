---
import { getCollection } from 'astro:content';

// Get latest 3 posts
const allPosts = await getCollection('insights');
const posts = allPosts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<section class="section insights-preview" aria-labelledby="insights-title">
  <div class="container" style="max-width:1280px;margin:0 auto;padding:0 1.5rem;">
    <!-- Header -->
    <div class="insights-header">
      <div style="display:flex;align-items:flex-end;justify-content:space-between;flex-wrap:wrap;gap:1.5rem;margin-bottom:3.5rem;">
        <div class="reveal">
          <span class="section-label">Blog</span>
          <h2 id="insights-title" class="section-title" style="margin-bottom:0;">
            Insights &amp; <span class="gradient-text">Perspectivas</span>
          </h2>
        </div>
        <a href="/insights" class="btn-secondary reveal" style="flex-shrink:0;">
          Ver todos os insights â†’
        </a>
      </div>
    </div>

    <!-- Posts grid -->
    {posts.length > 0 ? (
      <div class="insights-grid">
        {posts.map((post, i) => (
          <article class={`insight-card reveal reveal-delay-${i + 1}`}>
            <div class="insight-meta">
              <span class="tag">{post.data.category}</span>
              <time
                datetime={post.data.pubDate.toISOString()}
                class="insight-date"
              >
                {post.data.pubDate.toLocaleDateString('pt-BR', { day: '2-digit', month: 'short', year: 'numeric' })}
              </time>
            </div>

            <h3 class="insight-title">
              <a href={`/insights/${post.slug}`} class="insight-link">
                {post.data.title}
              </a>
            </h3>

            <p class="insight-excerpt">{post.data.description}</p>

            <div class="insight-footer">
              <span class="insight-read-time">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                  <circle cx="12" cy="12" r="10"/>
                  <polyline points="12 6 12 12 16 14"/>
                </svg>
                {post.data.readTime}
              </span>
              <a href={`/insights/${post.slug}`} class="read-link" aria-label={`Ler: ${post.data.title}`}>
                Ler
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                  <path d="M5 12h14M12 5l7 7-7 7"/>
                </svg>
              </a>
            </div>
          </article>
        ))}
      </div>
    ) : (
      <div class="insights-empty">
        <p>Nenhum post encontrado. Novos insights em breve.</p>
      </div>
    )}
  </div>
</section>

<style>
  .insights-preview {
    background: var(--bg-alt);
    border-top: 1px solid var(--border);
  }

  .insights-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  .insight-card {
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: var(--radius-xl);
    padding: 1.75rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    transition: transform 250ms ease, box-shadow 250ms ease, border-color 250ms ease;
  }

  .insight-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
    border-color: rgba(var(--accent-rgb), 0.25);
  }

  .insight-meta {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .insight-date {
    font-size: 0.8125rem;
    color: var(--text-muted);
    font-family: 'JetBrains Mono', monospace;
  }

  .insight-title {
    font-family: 'Syne', sans-serif;
    font-size: 1.0625rem;
    font-weight: 700;
    line-height: 1.35;
    letter-spacing: -0.02em;
    margin: 0;
  }

  .insight-link {
    color: var(--text);
    text-decoration: none;
    -webkit-text-fill-color: var(--text);
    transition: color 150ms ease;
  }

  .insight-link:hover {
    color: var(--accent);
    -webkit-text-fill-color: var(--accent);
    opacity: 1;
  }

  .insight-excerpt {
    font-size: 0.875rem;
    color: var(--text-muted);
    line-height: 1.65;
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    flex: 1;
  }

  .insight-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: 0.875rem;
    border-top: 1px solid var(--border);
    margin-top: auto;
  }

  .insight-read-time {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.8125rem;
    color: var(--text-muted);
  }

  .read-link {
    display: inline-flex;
    align-items: center;
    gap: 0.3rem;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--accent);
    text-decoration: none;
    -webkit-text-fill-color: var(--accent);
    transition: gap 200ms ease;
  }

  .read-link:hover {
    gap: 0.5rem;
    opacity: 1;
    -webkit-text-fill-color: var(--accent);
  }

  .insights-empty {
    text-align: center;
    padding: 4rem 0;
    color: var(--text-muted);
  }

  @media (max-width: 900px) {
    .insights-grid {
      grid-template-columns: 1fr;
      max-width: 500px;
    }
  }

  @media (min-width: 640px) and (max-width: 900px) {
    .insights-grid {
      grid-template-columns: repeat(2, 1fr);
      max-width: 100%;
    }
  }
</style>
