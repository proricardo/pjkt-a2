---
// Services section — "O que fazemos" — bento grid
const services = [
  {
    id: 'projetos-tecnologia',
    tag: '// tech',
    title: 'Projetos de Tecnologia',
    description: 'Desenvolvimento de software, arquitetura de sistemas, APIs robustas e MVPs que escalam. Do código ao deploy com qualidade e velocidade.',
    details: ['Web apps & mobile (PWA)', 'APIs REST / GraphQL', 'Microsserviços & integrações', 'MVP rápido e escalável', 'Migrações de sistemas'],
    href: '/servicos#projetos-tecnologia',
    iconPath: `<svg width="32" height="32" viewBox="0 0 48 48" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
      <polyline points="16 18 8 24 16 30"/>
      <polyline points="32 18 40 24 32 30"/>
      <line x1="28" y1="8" x2="20" y2="40"/>
    </svg>`,
    accent: 'violet',
  },
  {
    id: 'projetos-ia',
    tag: '// ai',
    title: 'Projetos de IA',
    description: 'Integramos inteligência artificial onde ela gera valor real: automação inteligente, agentes, RAG, LLMs e pipelines de ML em produção.',
    details: ['LLM fine-tuning & RAG', 'Agentes de IA autônomos', 'Automação inteligente', 'Computer vision', 'Análise preditiva'],
    href: '/servicos#projetos-ia',
    iconPath: `<svg width="32" height="32" viewBox="0 0 48 48" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
      <circle cx="24" cy="24" r="8"/>
      <circle cx="24" cy="8" r="4"/>
      <circle cx="24" cy="40" r="4"/>
      <circle cx="8" cy="24" r="4"/>
      <circle cx="40" cy="24" r="4"/>
      <line x1="24" y1="16" x2="24" y2="12"/>
      <line x1="24" y1="36" x2="24" y2="32"/>
      <line x1="12" y1="24" x2="16" y2="24"/>
      <line x1="36" y1="24" x2="32" y2="24"/>
    </svg>`,
    accent: 'blue',
  },
  {
    id: 'assessoria',
    tag: '// advisory',
    title: 'Assessoria de Tecnologia',
    description: 'Atuamos como parceiro estratégico: diagnóstico, roadmap, avaliação de fornecedores e governança tecnológica para empresas em transformação.',
    details: ['Diagnóstico tecnológico', 'Roadmap de transformação', 'Avaliação de fornecedores', 'Arquitetura de solução', 'Governança & compliance'],
    href: '/servicos#assessoria',
    iconPath: `<svg width="32" height="32" viewBox="0 0 48 48" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
      <circle cx="24" cy="24" r="14"/>
      <circle cx="24" cy="24" r="3"/>
      <line x1="24" y1="10" x2="24" y2="21"/>
      <line x1="24" y1="27" x2="24" y2="38"/>
      <line x1="10" y1="24" x2="21" y2="24"/>
      <line x1="27" y1="24" x2="38" y2="24"/>
    </svg>`,
    accent: 'neon',
  },
  {
    id: 'consultoria',
    tag: '// consulting',
    title: 'Consultoria em Soluções',
    description: 'Mapeamos problemas, desenhamos soluções e acompanhamos a implementação. Clareza do diagnóstico ao resultado mensurável.',
    details: ['Mapeamento de processos', 'Identificação de gargalos', 'Design de solução', 'POC & prototipagem', 'Relatório de impacto'],
    href: '/servicos#consultoria',
    iconPath: `<svg width="32" height="32" viewBox="0 0 48 48" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
      <rect x="8" y="8" width="13" height="13" rx="2"/>
      <rect x="27" y="8" width="13" height="13" rx="2"/>
      <rect x="8" y="27" width="13" height="13" rx="2"/>
      <path d="M27 33.5h13M33.5 27v13"/>
    </svg>`,
    accent: 'violet',
  },
];
---

<section class="section" id="servicos" aria-labelledby="services-title">
  <!-- Background decoration -->
  <div class="services-bg" aria-hidden="true">
    <div class="bg-grid-dots" style="position:absolute;inset:0;opacity:0.4;"></div>
  </div>

  <div class="container" style="max-width:1280px;margin:0 auto;padding:0 1.5rem;position:relative;">
    <!-- Section header -->
    <div class="section-header reveal">
      <span class="section-label">O que fazemos</span>
      <h2 id="services-title" class="section-title gradient-text">
        Soluções sob medida<br />para cada desafio
      </h2>
      <p class="section-subtitle">
        Quatro frentes de atuação integradas — tecnologia, IA, estratégia e execução — para cobrir todo o ciclo do seu projeto.
      </p>
    </div>

    <!-- Bento grid -->
    <div class="services-grid">
      {services.map((service, i) => (
        <div class={`service-card service-card--${service.accent} reveal reveal-delay-${i + 1}`}>
          <!-- Icon -->
          <div class="service-icon" aria-hidden="true">
            <Fragment set:html={service.iconPath} />
          </div>

          <!-- Content -->
          <div class="service-body">
            <span class="tag">{service.tag}</span>
            <h3 class="service-title">{service.title}</h3>
            <p class="service-description">{service.description}</p>

            <!-- Detail list -->
            <ul class="service-list" role="list">
              {service.details.map(detail => (
                <li class="service-list-item">
                  <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true" class="service-check">
                    <polyline points="20 6 9 17 4 12"/>
                  </svg>
                  {detail}
                </li>
              ))}
            </ul>
          </div>

          <!-- Footer link -->
          <a href={service.href} class="service-link" aria-label={`Saiba mais sobre ${service.title}`}>
            Saiba mais
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>

          <!-- Accent border top -->
          <div class="service-accent-bar" aria-hidden="true"></div>
        </div>
      ))}
    </div>

    <!-- Bottom CTA -->
    <div class="services-cta reveal">
      <p style="color:var(--text-muted);font-size:0.9375rem;">
        Não sabe qual serviço se encaixa melhor?
      </p>
      <a href="/contato" class="btn-primary">
        Conversar com especialista
      </a>
    </div>
  </div>
</section>

<style>
  .services-bg {
    position: absolute;
    inset: 0;
    overflow: hidden;
    pointer-events: none;
  }

  .section-header {
    max-width: 640px;
    margin-bottom: 3.5rem;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  .service-card {
    position: relative;
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: var(--radius-xl);
    padding: 2rem;
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    overflow: hidden;
    transition: transform 250ms ease, box-shadow 250ms ease, border-color 250ms ease;
  }

  .service-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 16px 48px rgba(0, 0, 0, 0.12);
  }

  .service-card--violet:hover {
    border-color: rgba(var(--accent-rgb), 0.4);
    box-shadow: 0 16px 48px rgba(var(--accent-rgb), 0.15);
  }

  .service-card--blue:hover {
    border-color: rgba(var(--accent-2-rgb), 0.4);
    box-shadow: 0 16px 48px rgba(var(--accent-2-rgb), 0.15);
  }

  .service-card--neon:hover {
    border-color: rgba(var(--accent-neon-rgb), 0.4);
    box-shadow: 0 16px 48px rgba(var(--accent-neon-rgb), 0.1);
  }

  .service-accent-bar {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    opacity: 0;
    transition: opacity 250ms ease;
  }

  .service-card--violet .service-accent-bar {
    background: linear-gradient(90deg, var(--accent), var(--accent-2));
  }

  .service-card--blue .service-accent-bar {
    background: linear-gradient(90deg, var(--accent-2), var(--accent));
  }

  .service-card--neon .service-accent-bar {
    background: linear-gradient(90deg, var(--accent-neon), var(--accent-2));
  }

  .service-card:hover .service-accent-bar {
    opacity: 1;
  }

  .service-icon {
    width: 52px;
    height: 52px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--bg-alt);
    border: 1px solid var(--border);
    border-radius: var(--radius-md);
    color: var(--accent);
    flex-shrink: 0;
    transition: all 250ms ease;
  }

  .service-card--blue .service-icon { color: var(--accent-2); }
  .service-card--neon .service-icon { color: var(--accent-neon); }

  .service-card:hover .service-icon {
    background: rgba(var(--accent-rgb), 0.1);
    border-color: rgba(var(--accent-rgb), 0.3);
  }

  .service-card--blue:hover .service-icon {
    background: rgba(var(--accent-2-rgb), 0.1);
    border-color: rgba(var(--accent-2-rgb), 0.3);
  }

  .service-card--neon:hover .service-icon {
    background: rgba(var(--accent-neon-rgb), 0.1);
    border-color: rgba(var(--accent-neon-rgb), 0.3);
  }

  .service-body {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    flex: 1;
  }

  .service-title {
    font-family: 'Syne', sans-serif;
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--text);
    letter-spacing: -0.02em;
    margin: 0;
  }

  .service-description {
    font-size: 0.9rem;
    color: var(--text-muted);
    line-height: 1.65;
    margin: 0;
  }

  .service-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
  }

  .service-list-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.85rem;
    color: var(--text-muted);
  }

  .service-check {
    color: var(--accent-neon);
    flex-shrink: 0;
  }

  .service-link {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--accent);
    text-decoration: none;
    -webkit-text-fill-color: var(--accent);
    margin-top: auto;
    transition: gap 200ms ease;
  }

  .service-link:hover {
    gap: 0.6rem;
    opacity: 1;
    -webkit-text-fill-color: var(--accent);
  }

  .services-cta {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1.5rem;
    flex-wrap: wrap;
    padding-top: 1rem;
  }

  @media (max-width: 768px) {
    .services-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
