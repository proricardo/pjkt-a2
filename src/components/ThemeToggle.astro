// ThemeToggle component â€” reads/writes data-theme on <html>, persists to localStorage
---

<button
  id="theme-toggle"
  class="theme-toggle"
  aria-label="Ativar modo escuro"
  title="Alternar tema"
  type="button"
>
  <!-- Sun icon (shown in dark mode) -->
  <svg
    id="icon-sun"
    xmlns="http://www.w3.org/2000/svg"
    width="20"
    height="20"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    aria-hidden="true"
  >
    <circle cx="12" cy="12" r="5" />
    <line x1="12" y1="1" x2="12" y2="3" />
    <line x1="12" y1="21" x2="12" y2="23" />
    <line x1="4.22" y1="4.22" x2="5.64" y2="5.64" />
    <line x1="18.36" y1="18.36" x2="19.78" y2="19.78" />
    <line x1="1" y1="12" x2="3" y2="12" />
    <line x1="21" y1="12" x2="23" y2="12" />
    <line x1="4.22" y1="19.78" x2="5.64" y2="18.36" />
    <line x1="18.36" y1="5.64" x2="19.78" y2="4.22" />
  </svg>

  <!-- Moon icon (shown in light mode) -->
  <svg
    id="icon-moon"
    xmlns="http://www.w3.org/2000/svg"
    width="20"
    height="20"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    aria-hidden="true"
  >
    <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z" />
  </svg>
</button>

<style>
  .theme-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 10px;
    border: 1.5px solid var(--border);
    background: var(--surface);
    color: var(--text-muted);
    cursor: pointer;
    transition: all 200ms ease;
    position: relative;
    flex-shrink: 0;
  }

  .theme-toggle:hover {
    border-color: var(--accent);
    color: var(--accent);
    background: rgba(var(--accent-rgb), 0.06);
  }

  #icon-sun,
  #icon-moon {
    position: absolute;
    transition: opacity 200ms ease, transform 200ms ease;
  }

  /* Light mode: show moon, hide sun */
  :global([data-theme="light"]) #icon-sun {
    opacity: 0;
    transform: rotate(-45deg) scale(0.7);
    pointer-events: none;
  }

  :global([data-theme="light"]) #icon-moon {
    opacity: 1;
    transform: rotate(0deg) scale(1);
  }

  /* Dark mode: show sun, hide moon */
  :global([data-theme="dark"]) #icon-moon {
    opacity: 0;
    transform: rotate(45deg) scale(0.7);
    pointer-events: none;
  }

  :global([data-theme="dark"]) #icon-sun {
    opacity: 1;
    transform: rotate(0deg) scale(1);
  }
</style>

<script is:inline>
  (function() {
    var btn = document.getElementById('theme-toggle');
    if (!btn) return;

    function getTheme() {
      return document.documentElement.getAttribute('data-theme') || 'light';
    }

    function setTheme(theme) {
      document.documentElement.setAttribute('data-theme', theme);
      try {
        localStorage.setItem('projekt-theme', theme);
      } catch (e) {}
      btn.setAttribute(
        'aria-label',
        theme === 'dark' ? 'Ativar modo claro' : 'Ativar modo escuro'
      );
    }

    btn.addEventListener('click', function() {
      setTheme(getTheme() === 'dark' ? 'light' : 'dark');
    });

    // Set initial aria-label
    var initial = getTheme();
    btn.setAttribute(
      'aria-label',
      initial === 'dark' ? 'Ativar modo claro' : 'Ativar modo escuro'
    );
  })();
</script>
