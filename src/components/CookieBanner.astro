---
// CookieBanner — LGPD compliance
// Loads GA4 only if accepted and env var present
const gaId = import.meta.env.PUBLIC_GA_ID;
---

<!-- LGPD Cookie Consent Banner -->
<div
  id="cookie-banner"
  role="dialog"
  aria-label="Consentimento de cookies"
  aria-live="polite"
  class="cookie-banner"
  hidden
>
  <div class="cookie-inner">
    <div class="cookie-text">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true" style="flex-shrink:0;color:var(--accent);">
        <circle cx="12" cy="12" r="10"/>
        <line x1="12" y1="8" x2="12" y2="12"/>
        <line x1="12" y1="16" x2="12.01" y2="16"/>
      </svg>
      <p>
        Usamos cookies para melhorar sua experiência. Leia nossa
        <a href="/cookies" class="cookie-link">Política de Cookies</a> e
        <a href="/privacidade" class="cookie-link">Privacidade</a>.
      </p>
    </div>
    <div class="cookie-actions">
      <button
        id="cookie-accept"
        class="btn-primary"
        style="padding:0.5rem 1.25rem;font-size:0.875rem;"
        type="button"
      >
        Aceitar
      </button>
      <button
        id="cookie-reject"
        class="btn-secondary"
        style="padding:0.5rem 1.25rem;font-size:0.875rem;"
        type="button"
      >
        Recusar
      </button>
    </div>
  </div>
</div>

{gaId && (
  <!-- Google Analytics — loaded only after acceptance -->
  <script is:inline define:vars={{ gaId }}>
    window.__GA_ID = gaId;
  </script>
)}

<style>
  .cookie-banner {
    position: fixed;
    bottom: 1.5rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 9999;
    width: calc(100% - 3rem);
    max-width: 800px;
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-xl);
    animation: slide-up 0.3s ease forwards;
  }

  @keyframes slide-up {
    from { opacity: 0; transform: translateX(-50%) translateY(20px); }
    to { opacity: 1; transform: translateX(-50%) translateY(0); }
  }

  .cookie-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1.5rem;
    padding: 1rem 1.25rem;
    flex-wrap: wrap;
  }

  .cookie-text {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    flex: 1;
  }

  .cookie-text p {
    font-size: 0.875rem;
    color: var(--text-muted);
    line-height: 1.5;
    margin: 0;
  }

  .cookie-link {
    color: var(--accent);
    text-decoration: underline;
    text-underline-offset: 2px;
    -webkit-text-fill-color: var(--accent);
  }

  .cookie-actions {
    display: flex;
    gap: 0.75rem;
    flex-shrink: 0;
  }

  @media (max-width: 600px) {
    .cookie-inner {
      flex-direction: column;
    }

    .cookie-actions {
      width: 100%;
    }

    .cookie-actions button {
      flex: 1;
    }
  }
</style>

<script is:inline>
  (function() {
    var CONSENT_KEY = 'projekt-cookie-consent';
    var banner = document.getElementById('cookie-banner');
    var acceptBtn = document.getElementById('cookie-accept');
    var rejectBtn = document.getElementById('cookie-reject');

    function getConsent() {
      try { return localStorage.getItem(CONSENT_KEY); } catch(e) { return null; }
    }

    function setConsent(value) {
      try { localStorage.setItem(CONSENT_KEY, value); } catch(e) {}
    }

    function loadGA() {
      var gaId = window.__GA_ID;
      if (!gaId) return;
      var script = document.createElement('script');
      script.async = true;
      script.src = 'https://www.googletagmanager.com/gtag/js?id=' + gaId;
      document.head.appendChild(script);
      window.dataLayer = window.dataLayer || [];
      function gtag() { window.dataLayer.push(arguments); }
      window.gtag = gtag;
      gtag('js', new Date());
      gtag('config', gaId, { anonymize_ip: true });
    }

    function hideBanner() {
      banner.setAttribute('hidden', '');
    }

    // Check existing consent
    var existing = getConsent();
    if (existing === 'accepted') {
      loadGA();
      return;
    }
    if (existing === 'rejected') {
      return;
    }

    // Show banner
    banner.removeAttribute('hidden');

    if (acceptBtn) {
      acceptBtn.addEventListener('click', function() {
        setConsent('accepted');
        hideBanner();
        loadGA();
      });
    }

    if (rejectBtn) {
      rejectBtn.addEventListener('click', function() {
        setConsent('rejected');
        hideBanner();
      });
    }
  })();
</script>
